@model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli Pizze</h1>
            </div>
            <div class="post-single-image-container">
                <img src="@Model.Immagine" width=100%>
            </div>
            <p>
                <strong>Nome:</strong>
                @Model.Nome
            </p>
            <p>
                <strong>Ingredienti:</strong>
                @Model.Descrizione
            </p>
            <p>
                <strong>Categoria:</strong>
                @Model.Categoria.Nome
            </p>
            <p>
                <strong>Ingredienti:</strong>
                @foreach (Ingrediente ingrediente in Model.Ingredienti)
                {
                    <div>
                        <label>@ingrediente.Condimento</label>
                    </div>
                }
            </p>
        </div>
    </div>
</div>
